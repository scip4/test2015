@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@{
    ViewBag.Title = "Roles";
}
<div class="page-header"><h1>Roles Administration</h1></div>
<div class="row">
    <div class="col-xs-12">
        <div class="row">
            <div class="col-xs-12 col-sm-6">
                @using (Html.BeginForm("Create", "Roles", FormMethod.Post, new{role="form"}))
                {
                    @Html.AntiForgeryToken()
                    <div class="widget-box">
                        <div class="widget-header"><h4 class="widget-title">Create new role</h4></div>
                        <div class="widget-body">
                            <div class="widget-main">
                                <div class="input-group">
                                    <input type="text" name="Name" class="form-control" placeholder="Role name" />
                                    <span class="input-group-btn"><button type="submit" class="btn btn-sm btn-default"><i class="ace-icon fa fa-plus bigger-110"></i> Add</button></span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-xs-12 col-sm-6">
                @if (!Model.Any())
                {
                    <span>There are no roles available. Click on <strong>Create</strong> button to start adding new roles.</span>
                }
                <table class="table table-striped table-bordered table-hover" id="rolesTable">
                    <thead>
                        <tr>
                            <th>
                                <i class="ace-icon fa fa-user"></i> Role
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model)
                        {
                            <tr>
                                <td>@role.Name</td>
                                <td>
                                    <div class="hidden-sm btn-group">
                                        <a class="btn btn-xs btn-info" href="@Url.Action("Edit", "Roles", new{id=role.Id})"><i class="ace-icon fa fa-pencil"></i></a>
                                        <a class="btn btn-xs btn-danger" href="@Url.Action("Delete", "Roles", new{id=role.Id})"><i class="ace-icon fa fa-trash-o"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>